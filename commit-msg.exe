#!/usr/bin/python

import sys
import re

message_file = sys.argv[1]
message = open(message_file, 'r').read()

# Match with a specified pattern
match = re.match(r'bug-fix', message)

if match is None:
    print 'Your commit has been rejected!'
    print 'Commit message must begin with \'bug-fix: \''
    print 'i.e. bug-fix: this is a commit message'
    sys.exit(1)